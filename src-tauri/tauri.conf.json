{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Capturist",
  "identifier": "me.ariyadey.capturist",
  "version": "0.1.0",

  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/capturist/browser"
  },

  "app": {
    "windows": [
      {
        "alwaysOnTop": true,
        "center": true,
        "closable": false,
        "create": false,
        "decorations": false,
        "dragDropEnabled": false,
        "focus": true,
        "fullscreen": false,
        "label": "quick-add",
        "maximized": true,
        "resizable": true,
        "shadow": false,
        "skipTaskbar": true,
        "title": "Capturist",
        "transparent": true,
        "visible": true,
        "zoomHotkeysEnabled": false
      },
      {
        "alwaysOnTop": false,
        "center": true,
        "closable": true,
        "create": false,
        "decorations": true,
        "dragDropEnabled": true,
        "focus": true,
        "fullscreen": false,
        "label": "authentication",
        "maximized": false,
        "resizable": false,
        "shadow": true,
        "skipTaskbar": false,
        "title": "Capturist - Log in to Todoist",
        "transparent": false,
        "visible": true,
        "zoomHotkeysEnabled": true
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'"],
        "connect-src": ["'self'", "ipc://localhost", "https://api.todoist.com"],
        "script-src": ["'self'", "'unsafe-inline'"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "img-src": ["'self'"],
        "font-src": ["'self'"]
      },
      "dangerousDisableAssetCspModification": ["script-src", "style-src"]
    }
  },

  "bundle": {
    "active": true,
    "category": "Productivity",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },

  "plugins": {
    "cli": {
      "description": "Capturist - A Todoist client to quickly add tasks",
      "args": [
        {
          "name": "minimize"
        },
        {
          "name": "quick-add"
        }
      ]
    },
    "deep-link": {
      "desktop": {
        "schemes": ["capturist"]
      }
    }
  }
}
