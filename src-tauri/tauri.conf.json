{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "capturist",
  "version": "0.1.0",
  "identifier": "me.ariyadey.capturist.app",

  "build": {
    "beforeDevCommand": "npm start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm build",
    "frontendDist": "../dist/capturist/browser"
  },

  "app": {
    "windows": [
      {
        "alwaysOnTop": true,
        "center": true,
        "closable": false,
        "create": false,
        "decorations": false,
        "dragDropEnabled": false,
        "focus": true,
        "fullscreen": false,
        "label": "quick-add",
        "maximized": true,
        "resizable": true,
        "shadow": false,
        "skipTaskbar": true,
        "title": "Capturist",
        "transparent": true,
        "visible": true,
        "zoomHotkeysEnabled": false
      },
      {
        "alwaysOnTop": false,
        "center": true,
        "closable": true,
        "create": false,
        "decorations": true,
        "dragDropEnabled": true,
        "focus": true,
        "fullscreen": false,
        "label": "authentication",
        "maximized": false,
        "resizable": false,
        "shadow": true,
        "skipTaskbar": false,
        "title": "Capturist - Log in to Todoist",
        "transparent": false,
        "visible": true,
        "zoomHotkeysEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' https://api.todoist.com;"
    }
  },

  "bundle": {
    "active": true,
    "category": "Productivity",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
