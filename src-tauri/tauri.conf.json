{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Capturist",
  "identifier": "me.ariyadey.capturist",
  "version": "0.2.5",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/capturist/browser"
  },
  "app": {
    "windows": [
      {
        "alwaysOnTop": false,
        "center": true,
        "closable": false,
        "create": false,
        "decorations": false,
        "dragDropEnabled": false,
        "focus": true,
        "fullscreen": false,
        "label": "quick-add",
        "maximized": true,
        "resizable": true,
        "shadow": false,
        "skipTaskbar": true,
        "title": "Capturist",
        "transparent": true,
        "visible": true,
        "zoomHotkeysEnabled": false
      },
      {
        "alwaysOnTop": false,
        "center": true,
        "closable": true,
        "create": false,
        "decorations": true,
        "dragDropEnabled": true,
        "focus": true,
        "fullscreen": false,
        "label": "authentication",
        "maximized": false,
        "resizable": false,
        "shadow": true,
        "skipTaskbar": false,
        "title": "Capturist - Log in to Todoist",
        "transparent": false,
        "visible": true,
        "zoomHotkeysEnabled": true
      }
    ],
    "security": {
      "csp": {
        "default-src": [
          "'self'"
        ],
        "connect-src": [
          "'self'",
          "ipc://localhost",
          "https://api.todoist.com"
        ],
        "script-src": [
          "'self'",
          "'unsafe-inline'"
        ],
        "style-src": [
          "'self'",
          "'unsafe-inline'"
        ],
        "img-src": [
          "'self'"
        ],
        "font-src": [
          "'self'"
        ]
      },
      "dangerousDisableAssetCspModification": [
        "script-src",
        "style-src"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm"
    ],
    "category": "Productivity",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": false,
    "linux": {
      "deb": {
        "depends": [
          "libnotify-bin"
        ],
        "desktopTemplate": "Capturist.desktop",
        "files": {
          "/usr/share/metainfo/me.ariyadey.capturist.metainfo.xml": "../me.ariyadey.capturist.metainfo.xml"
        }
      },
      "rpm": {
        "depends": [
          "libnotify"
        ],
        "desktopTemplate": "Capturist.desktop",
        "files": {
          "/usr/share/metainfo/me.ariyadey.capturist.metainfo.xml": "../me.ariyadey.capturist.metainfo.xml"
        }
      }
    }
  },
  "plugins": {
    "cli": {
      "description": "Capturist - A Todoist client to quickly add tasks",
      "args": [
        {
          "name": "minimize"
        },
        {
          "name": "quick-add"
        }
      ]
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "capturist"
        ]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFCMEI5RTRCRDYxQTg2RjYKUldUMmhocldTNTRMRzFFZFZJcVBBbktMMVppQlp1ZEI2b25ZQUQzUGZVVmhuUnJtazJUcXRSMWUK",
      "endpoints": [
        "https://github.com/ariyadey/capturist/releases/download/latest/latest.json"
      ]
    }
  }
}
